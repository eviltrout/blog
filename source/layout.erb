    <link href='//fonts.googleapis.com/css?family=Paytone+One|Ubuntu:400,700,300italic' rel='stylesheet' type='text/css'>

    <title><% if defined?(current_page) and current_page.respond_to?(:title) %><%= current_page.title %> - <% end %>Evil Trout's Blog</title>

